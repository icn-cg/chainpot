{
  "name": "hardhat-project",
  "scripts": {
  "network:testnet": "npx ts-node scripts/networkSwitch.ts testnet",
  "network:mainnet": "npx ts-node scripts/networkSwitch.ts mainnet",
  "network:status": "npx ts-node scripts/networkSwitch.ts status",
  "network:list": "npx ts-node scripts/networkSwitch.ts list",
  "deploy:testnet": "pnpm run network:testnet && npx hardhat run scripts/deployComplete.ts --network amoy",
  "deploy:mainnet": "pnpm run network:mainnet && npx hardhat run scripts/deployMainnet.ts --network polygon",
    "check:deployment": "npx hardhat run scripts/checkDeployment.ts",
    "check:balance": "npx hardhat run scripts/checkBalance.ts",
    "verify:all": "npx hardhat run scripts/verifyContracts.ts",
    "test:pools": "npx hardhat run scripts/testPool.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.1",
    "chai": "^4.5.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.2",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.1"
  }
}
